{
  "openapi": "3.0.0",
  "info": {
    "title": "Database Query Tools",
    "version": "1.0.1"
  },
  "components": {
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    }
  },
  "paths": {
    "/mssql/read": {
      "post": {
        "tags": ["SQL Server 2000 Database Tool"],
        "summary": "Run SELECT query on SQL Server 2000",
        "security": [{ "bearerAuth": [] }],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "sql": {
                    "type": "string",
                    "example": "SELECT * FROM sysobjects"
                  },
                  "params": {
                    "type": "array",
                    "items": { "type": "string" },
                    "example": []
                  },
                  "skip": { "type": "integer", "example": 0 },
                  "take": { "type": "integer", "example": 10 },
                  "connection": { "type": "string", "example": "default" }
                },
                "required": ["sql"]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Query result",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "statusCode": { "type": "integer", "example": 200 },
                    "message": {
                      "type": "string",
                      "example": "Success"
                    },
                    "skip": { "type": "integer", "example": 0 },
                    "take": { "type": "integer", "example": 10 },
                    "totalCount": { "type": "integer", "example": 42 },
                    "data": {
                      "type": "array",
                      "items": { "type": "object" }
                    },
                    "columns": {
                      "type": "array",
                      "items": { "type": "string" },
                      "example": ["id", "name", "created_at"]
                    },
                    "source": {
                      "type": "string",
                      "example": "backend",
                      "description": "Indicates whether the result came from Redis cache or backend"
                    }
                  }
                }
              }
            }
          },
          "500": {
            "description": "Database error",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "statusCode": { "type": "integer", "example": 500 },
                    "message": {
                      "type": "string",
                      "example": "Database error: Invalid object name 'd_transaksi..t_schedules'"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/mssql/create": {
      "post": {
        "tags": ["SQL Server 2000 Database Tool"],
        "summary": "Run INSERT query on SQL Server 2000",
        "security": [{ "bearerAuth": [] }],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "sql": {
                    "type": "string",
                    "example": "INSERT INTO users (name,email) VALUES ('Andi','andi@test.com')"
                  },
                  "params": {
                    "type": "array",
                    "items": { "type": "string" },
                    "example": []
                  },
                  "connection": { "type": "string", "example": "default" }
                },
                "required": ["sql"]
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Insert success",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "statusCode": { "type": "integer", "example": 201 },
                    "message": {
                      "type": "string",
                      "example": "insert success"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/mssql/update": {
      "put": {
        "tags": ["SQL Server 2000 Database Tool"],
        "summary": "Run UPDATE query on SQL Server 2000",
        "security": [{ "bearerAuth": [] }],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "sql": {
                    "type": "string",
                    "example": "UPDATE users SET email='new@test.com' WHERE id=1"
                  },
                  "params": {
                    "type": "array",
                    "items": { "type": "string" },
                    "example": []
                  },
                  "connection": { "type": "string", "example": "default" }
                },
                "required": ["sql"]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Update success",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "statusCode": { "type": "integer", "example": 200 },
                    "message": {
                      "type": "string",
                      "example": "update success"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/mssql/delete": {
      "delete": {
        "tags": ["SQL Server 2000 Database Tool"],
        "summary": "Run DELETE query on SQL Server 2000",
        "security": [{ "bearerAuth": [] }],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "sql": {
                    "type": "string",
                    "example": "DELETE FROM users WHERE id=1"
                  },
                  "params": {
                    "type": "array",
                    "items": { "type": "string" },
                    "example": []
                  },
                  "connection": { "type": "string", "example": "default" }
                },
                "required": ["sql"]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Delete success",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "statusCode": { "type": "integer", "example": 200 },
                    "message": {
                      "type": "string",
                      "example": "delete success"
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}
