{
  "openapi": "3.0.0",
  "info": {
    "title": "Database Query Tools",
    "version": "1.0.0"
  },
  "components": {
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    }
  },
  "paths": {
    "/mssql/query": {
	  "post": {
		"tags": ["SQL Server 2000 Database Tool"],
		"summary": "Run SELECT query on SQL Server 2000 (supports dynamic JSON filter)",
		"description": "Execute a SELECT query with optional pagination and flexible JSON-based filtering (supports AND/OR/BETWEEN/LIKE).",
		"security": [{ "bearerAuth": [] }],
		"requestBody": {
		  "required": true,
		  "content": {
			"application/json": {
			  "schema": {
				"type": "object",
				"properties": {
				  "sql": {
					"type": "string",
					"example": "SELECT * FROM users"
				  },
				  "skip": {
					"type": "integer",
					"example": 0
				  },
				  "take": {
					"type": "integer",
					"example": 10
				  },
				  "connection": {
					"type": "string",
					"example": "default"
				  },
				  "filter": {
					"type": "object",
					"description": "Optional JSON-based filter object. Supports nested AND/OR logic and operators: LIKE, IN, BETWEEN.",
					"nullable": true,
					"example": {
					  "status": "aktif",
					  "OR": {
						"nama": "%agus%",
						"kota": "%jakarta%"
					  },
					  "tanggal": ["2025-01-01", "2025-01-31"]
					}
				  }
				},
				"required": ["sql"]
			  }
			}
		  }
		},
		"responses": {
		  "200": {
			"description": "Query result",
			"content": {
			  "application/json": {
				"schema": {
				  "type": "object",
				  "properties": {
					"statusCode": {
					  "type": "integer",
					  "example": 200
					},
					"message": {
					  "type": "string",
					  "example": "success"
					},
					"skip": {
					  "type": "integer",
					  "example": 0
					},
					"take": {
					  "type": "integer",
					  "example": 10
					},
					"totalCount": {
					  "type": "integer",
					  "example": 42
					},
					"data": {
					  "type": "array",
					  "items": { "type": "object" },
					  "example": [
						{
						  "id": 1,
						  "nama": "Agus",
						  "kota": "Jakarta",
						  "status": "aktif"
						}
					  ]
					},
					"columns": {
					  "type": "array",
					  "items": { "type": "string" },
					  "example": ["id", "nama", "kota", "status"]
					}
				  }
				}
			  }
			}
		  }
		}
	  }
	},
    "/mssql/insert": {
      "post": {
        "tags": ["SQL Server 2000 Database Tool"],
        "summary": "Run INSERT query on SQL Server 2000",
        "security": [{ "bearerAuth": [] }],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "sql": { "type": "string", "example": "INSERT INTO users (name,email) VALUES ('Andi','andi@test.com')" },
                  "connection": { "type": "string", "example": "default" }
                },
                "required": ["sql"]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Insert success",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "statusCode": { "type": "integer", "example": 201 },
                    "message": { "type": "string", "example": "insert success" }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/mssql/update": {
      "post": {
        "tags": ["SQL Server 2000 Database Tool"],
        "summary": "Run UPDATE query on SQL Server 2000",
        "security": [{ "bearerAuth": [] }],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "sql": { "type": "string", "example": "UPDATE users SET email='new@test.com' WHERE id=1" },
                  "connection": { "type": "string", "example": "default" }
                },
                "required": ["sql"]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Update success",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
					"statusCode": { "type": "integer", "example": 200 },
                    "message": { "type": "string", "example": "update success" }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/mssql/delete": {
      "post": {
        "tags": ["SQL Server 2000 Database Tool"],
        "summary": "Run DELETE query on SQL Server 2000",
        "security": [{ "bearerAuth": [] }],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "sql": { "type": "string", "example": "DELETE FROM users WHERE id=1" },
                  "connection": { "type": "string", "example": "default" }
                },
                "required": ["sql"]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Delete success",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "statusCode": { "type": "integer", "example": 200 },
                    "message": { "type": "string", "example": "delete success" }
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}
