{
  "openapi": "3.0.0",
  "info": {
    "title": "Database Query Tools",
    "version": "1.0.0"
  },
  "components": {
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    }
  },
  "paths": {
    "/mssql/": {
      "post": {
        "tags": ["SQL Server 2000 Database Tool"],
        "summary": "Run raw SQL on SQL Server 2000",
        "security": [{ "bearerAuth": [] }],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "sql": { "type": "string", "example": "SELECT * FROM sysobjects" },
                  "skip": { "type": "integer", "example": 0 },
                  "take": { "type": "integer", "example": 10 },
                  "connection": { "type": "string", "example": "default", "description": "Connection endpoint to use (server-side, optional)" }
                },
                "required": ["sql"]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Query result",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": { "type": "string", "example": "success" },
                    "skip": { "type": "integer", "example": 0 },
                    "take": { "type": "integer", "example": 10 },
                    "totalCount": { "type": "integer", "example": 42 },
                    "data": { "type": "array", "items": { "type": "object" } }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/pgsql/": {
      "post": {
        "tags": ["PgSQL Database Tool"],
        "summary": "Run raw SQL on PostgreSQL",
        "security": [{ "bearerAuth": [] }],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "sql": { "type": "string", "example": "SELECT * FROM sc_mst.karyawan" },
                  "skip": { "type": "integer", "example": 0 },
                  "take": { "type": "integer", "example": 10 },
                  "connection": { "type": "string", "example": "default", "description": "Connection endpoint to use (server-side, optional)" }
                },
                "required": ["sql"]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Query result",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": { "type": "string", "example": "success" },
                    "skip": { "type": "integer", "example": 0 },
                    "take": { "type": "integer", "example": 10 },
                    "totalCount": { "type": "integer", "example": 42 },
                    "data": { "type": "array", "items": { "type": "object" } }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/mysql/": {
      "post": {
        "tags": ["MySQL Database Tool"],
        "summary": "Run raw SQL on MySQL",
        "security": [{ "bearerAuth": [] }],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "sql": { "type": "string", "example": "SELECT * FROM db" },
                  "skip": { "type": "integer", "example": 0 },
                  "take": { "type": "integer", "example": 10 },
                  "connection": { "type": "string", "example": "default", "description": "Connection endpoint to use (server-side, optional)" }
                },
                "required": ["sql"]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Query result",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": { "type": "string", "example": "success" },
                    "skip": { "type": "integer", "example": 0 },
                    "take": { "type": "integer", "example": 10 },
                    "totalCount": { "type": "integer", "example": 42 },
                    "data": { "type": "array", "items": { "type": "object" } }
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}
